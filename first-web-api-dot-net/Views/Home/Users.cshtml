@* @model List<first_web_api_dot_net.Models.User> *@
@{
    ViewData["Title"] = "All Users Page";
    Layout = "_Layout";
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">password</th>
            <th scope="col">Gender</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr id="@item.Id">
        <th scope="row">@item.Id</th>
        <td>@item.Email</td>
        <td>@item.Name</td>
        <td>@item.Password</td>
        <td>@item.Gender</td>
        <td><button class="btn btn-primary" id="edit-btn" value="@item.Id">Edit</button></td>
        <td><button class="btn btn-danger" id="delete-btn" value="@item.Id">Delete</button></td>
        </tr>
        }
    </tbody>
</table>